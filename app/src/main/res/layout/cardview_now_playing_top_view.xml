<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_current_song"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/current_song_mini_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:src="@drawable/music_list_" />

        <TextView
            android:id="@+id/current_song_mini_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/current_song_mini_image_view"
            android:layout_toRightOf="@+id/current_song_mini_image_view"
            android:text="Love Yourz"
            android:textAppearance="?android:textAppearance" />

        <TextView
            android:id="@+id/current_song_mini_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/current_song_mini_title"
            android:layout_below="@+id/current_song_mini_title"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/current_song_mini_image_view"
            android:text="jcole"
            android:textAppearance="?android:textAppearance" />

        <ImageView
            android:id="@+id/play_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/current_song_mini_image_view"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:padding="8dp"
            android:src="@drawable/ic_queue_music_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
