<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/favorite_cover_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:src="@drawable/music_list_" />

        <ImageView
            android:id="@+id/favorite_cover_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="26dp"
            tools:src="@drawable/music_list_" />

        <ImageView
            android:id="@+id/favorite_cover_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="66dp"
            tools:src="@drawable/music_list_" />

        <ImageView
            android:id="@+id/favorite_cover_4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="99dp"
            tools:src="@drawable/music_list_" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favorite_cover_1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favorite_songs_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:textAppearance="?android:textAppearance"
                android:textStyle="bold"
                tools:text="65 songs" />

            <TextView
                android:id="@+id/favorite_songs_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearance"
                android:textStyle="bold"
                tools:text="3 hours" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
