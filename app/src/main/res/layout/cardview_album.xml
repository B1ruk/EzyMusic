<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/album_cover_Art"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/album_cover_" />

        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/album_cover_Art"
            android:layout_below="@+id/album_cover_Art"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="2014 forest hill" />

        <TextView
            android:id="@+id/album_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/album_cover_Art"
            android:layout_below="@+id/album_title"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="j cole"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/album_song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/album_cover_Art"
            android:layout_below="@+id/album_artist"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="14 songs"
            android:textAppearance="?android:textAppearanceSmall" />

        <ImageView
            android:id="@+id/album_detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/album_song_count"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/album_title"
            android:layout_marginLeft="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_more_vert_black_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>